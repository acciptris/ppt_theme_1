\mode<presentation>

% Define colors
\definecolor{base-color-one}{HTML}{bbdefb}
\definecolor{base-color-two}{HTML}{42a5f5}
\definecolor{base-color-one-comp}{HTML}{fbd8bb}
\definecolor{base-color-two-comp}{HTML}{f59342}
\definecolor{base-color-analogous-one}{HTML}{84f87d}
\definecolor{base-color-analogous-two}{HTML}{4bf542}
\definecolor{base-color-white}{HTML}{ffffff}
\definecolor{base-color-black}{HTML}{212121}

% Set beamer element colors
\setbeamercolor{frametitle}{fg=base-color-black, bg=base-color-white}

% \setbeamercolor{itemize item}{fg=white}
\setbeamercolor{itemize item}{fg=base-color-two}
\setbeamercolor{itemize subitem}{fg=base-color-two}

\setbeamercolor{enumerate item}{fg=base-color-one}
\setbeamercolor{description item}{fg=base-color-white}

\setbeamercolor{block title}{fg=base-color-white, bg=base-color-one}
\setbeamercolor{block body}{parent=normal text,bg=base-color-one, fg=base-color-black}

\setbeamercolor{block title alerted}{fg=base-color-white, bg=base-color-one}
\setbeamercolor{block body alerted}{parent=normal text, bg=base-color-one, fg=base-color-black}

\setbeamercolor{block title example}{fg=base-color-white, bg=base-color-one}
\setbeamercolor{block body example}{parent=normal text,bg=base-color-one, fg=base-color-black}

\setbeamercolor{palette primary}{fg=base-color-white, bg=base-color-black}

\setbeamercolor{section in toc}{fg=base-color-black}
\setbeamercolor{subsection in toc}{fg=base-color-black}
\setbeamercolor{section number projected}{bg=base-color-one, fg=base-color-white}
\setbeamercolor{subsection number projected}{bg=base-color-one, fg=base-color-white}

\setbeamercolor{footline}{fg=base-color-two, bg=base-color-white}

\setbeamercolor{footnote mark}{fg=base-color-two}

% Misc.
\setbeamercolor{title}{fg=base-color-black}
\setbeamercolor{normal text}{fg=base-color-black}
\setbeamercolor{page number in head/foot}{fg=base-color-black}

\setbeamercolor{background canvas}{bg=base-color-white}
\setbeamercolor{author in head/foot}{fg=base-color-white}
\setbeamercolor{date in head/foot}{fg=base-color-white}

\setbeamercolor{caption name}{fg=base-color-two}

\mode<all>