\setbeamertemplate{title page}{%
  \vskip0.45\paperheight
  \begin{beamercolorbox}[wd=\paperwidth, ht=0.45\paperheight]{titlepage}
    \begin{tikzpicture}
      \useasboundingbox (0,0) rectangle (\paperwidth,\paperheight);
      \fill[base-color-one] (10pt, -10pt) rectangle (\paperwidth - 10pt, 0.38\paperheight);
      \node[anchor=west] at (10pt, 0.44\paperheight) {
        \begin{minipage}{0.8\paperwidth}
          \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
        \end{minipage}
      };
      \node[anchor=west] at (20pt, 0.17\paperheight) {
        \begin{minipage}{0.7\paperwidth}
          \usebeamerfont{date}\insertdate\par
          \vskip10pt
          \usebeamerfont{author}\insertauthor\par
          \vskip5pt
          \usebeamerfont{institute}\insertinstitute\par
        \end{minipage}
        \begin{minipage}{0.2\paperwidth}
          \centering
          \inserttitlegraphic
        \end{minipage}
      };
		\end{tikzpicture}
  \end{beamercolorbox}
}%

